#!/usr/bin/env perl
use strict;
use warnings;
use Pod::Spell;

# VERSION

if(@ARGV) {  # iterate over files, sending to STDOUT
  foreach my $x (@ARGV) {
    Pod::Spell->new->parse_from_file($x, '-');
  }
} else {     # take from STDIN, send to STDOUT
  Pod::Spell->new->parse_from_filehandle();
}

# ABSTRACT: pod spell checking command line interface
# PODNAME: podspell
